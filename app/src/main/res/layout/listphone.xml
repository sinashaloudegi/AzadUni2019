<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linerr"
    android:padding="5dp"
    android:gravity="center_vertical|right"
    android:showDividers="beginning"
    android:background="#ffddf1f7"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="111dp"
        android:layout_gravity="left"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttoncall"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/phone"
            android:gravity="left"
            tools:ignore="NestedWeights,RtlHardcoded" />

        <Button
            android:id="@+id/btnlink2"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_margin="4.5dp"
            android:layout_weight="1"
            android:background="@drawable/darbaremaicon"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:text="صحفه شخصی"
            android:textColor="#ffeefcff"
            android:textSize="6sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:ignore="HardcodedText,InefficientWeight,SmallSp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textnamephon"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:minWidth="220dp"
                android:padding="2dp"
                android:text="نام و نام خانوادگی :"
                android:textColor="#ff22497d"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textsemat"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:minWidth="220dp"
                android:padding="2dp"
                android:text="سمت"
                android:textColor="#ff1d1d1d"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texttellphon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="2dp"
                android:phoneNumber="true"
                android:text="New Text"
                android:textColor="#ff1d1d1d"
                tools:ignore="Deprecated,TextViewEdits" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="تلفن :"
                android:textColor="#ff22497d"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imagephon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical|right"
        tools:ignore="ContentDescription,RtlHardcoded" />

</LinearLayout>