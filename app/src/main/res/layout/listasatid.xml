<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/aa"
    android:padding="5dp"
    android:gravity="center_vertical|right"
    android:background="#ffddf1f7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="0.85">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textnameasatid"
            android:textColor="#ff22497d"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textreshte"
                android:textColor="#ff000000"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رشته : "
                android:id="@+id/textView8"
                android:textColor="#ff22497d"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textmadrak"
                android:textColor="#ff000000"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مدرک تحصیلی :"
                android:id="@+id/textView9"
                android:textColor="#ff000000"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textdaraje"
                android:textColor="#ff000000"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مرتبه علمی : "
                android:id="@+id/textView10"
                android:textColor="#ff000000"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="2dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textemail"
                android:textColor="#ff000000"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="2dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="right"
            android:layout_gravity="right">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btnrezoome"
                android:layout_weight="1"
                android:textColor="#ff22497d"
                android:background="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btnlink"
                android:layout_weight="1"
                android:textColor="#ffeefcff"
                android:background="@drawable/btn"
                android:visibility="visible"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/imageasatid"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_vertical|right" />

</LinearLayout>